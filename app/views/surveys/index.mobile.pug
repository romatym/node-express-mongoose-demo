extends ../layouts/default

block main
  h1= title

block content
  - if (surveys.length)
    each survey, index in surveys
      div(class=`py-4 ${index && 'border-top'}`)
        include survey

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page, 'page-item', 'page-link')
  - else
    h4.text-muted No surveys.&nbsp;
      a(href="/surveys/new") create one
