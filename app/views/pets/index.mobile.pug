extends ../layouts/default

block main
  h1= title

block content
  - if (pets.length)
    each pet, index in pets
      div(class=`py-4 ${index && 'border-top'}`)
        include pet

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page, 'page-item', 'page-link')
  - else
    h4.text-muted No pets.&nbsp;
      a(href="/pets/new") create one
