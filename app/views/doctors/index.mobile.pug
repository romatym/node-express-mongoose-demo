extends ../layouts/default

block main
  h1= title

block content
  - if (doctors.length)
    each doctor, index in doctors
      div(class=`py-4 ${index && 'border-top'}`)
        include doctor

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page, 'page-item', 'page-link')
  - else
    h4.text-muted No doctors.&nbsp;
      a(href="/doctors/new") create one
