block content
  - if (templates.length)
    each template, index in templates
      div(class=`py-4 ${index && 'border-top'}`)
        //include template
        .panel.panel-default
          .panel-heading
            a.pull-right(href='#') View all
            h4= template.title
            h4= template.body
          .panel-body
            ul.list-group
              li.list-group-item Modals
              li.list-group-item Sliders / Carousel
              li.list-group-item Thumbnails        

    - if (pages > 1)
      ul.pagination
        - var arr = paginate({ currentPage: page, totalPages: pages })
        each item in arr
          li.page-item(class=item.isActive && item.type === 'PAGE' && 'active')
            a.page-link(href=`?page=${item.value}`)
              case item.type
                when 'FIRST_PAGE_LINK': | First
                when 'PREVIOUS_PAGE_LINK': | Previous
                when 'PAGE': =item.value
                when 'ELLIPSIS': | ...
                when 'NEXT_PAGE_LINK': | Next
                when 'LAST_PAGE_LINK': | Last
  - else
    h4.text-muted No templates.&nbsp;
      a(href="/templates/new") create one
