extends ../layouts/default

block main
  h1= title

block content
  - if (owners.length)
    each owner, index in owners
      div(class=`py-4 ${index && 'border-top'}`)
        include owner

    - if (pages > 1)
      ul.pagination
        != createPagination(pages, page, 'page-item', 'page-link')
  - else
    h4.text-muted No owners.&nbsp;
      a(href="/owners/new") create one
